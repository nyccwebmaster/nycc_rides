}

function nycc_rides_status_select_form($node, $ride_status) {
  if (is_numeric($node))
    $nid = $node;
  else
    $nid = $node->nid;
  $ele = array(
    '#type' => 'select',
    '#id' => "ride-status-$nid",
    '#name' => 'ride-status',
    '#attributes' => array('class' => 'ride-status'),
    '#options' =>  nycc_ride_status_options(),
    '#value' => $ride_status,
    '#ahah' => array(
      'path' => "nycc-update-ride-status-js/$nid",
      'wrapper' => "ride-status-$nid-wrapper",
      'event' => 'change',
    ),
  );
  return $ele;
}

